uses UFrmPrincipal, UDm;

{$R *.dfm}

procedure TFrmLogin.bsSkinButton1Click(Sender: TObject);
begin
    try
      Dm.SQLConnection1.Connected := false;
      Dm.SQLConnection1.Params.Strings =
      'drivername=DATASNAP'+#13+
      'port=8090'+#13+
      'communicationprotocol=http'+#13+
      'hostname=localhost'+#13+
      'DSAuthenticationUser=eric'+#13+
      'DSAuthenticationPassword=123'+#13;


      //[2];// :=  'DSAuthenticationPassword = ' + ESenha.Text;
      //Dm.SQLConnection1.Params[3];// :=  'DSAuthenticationUser =' + EUsuario.Text;
      Dm.SQLConnection1.Connected := true;
    except
      ShowMessage('Usuário ou senha inválidos');
    end;
end;

end.
